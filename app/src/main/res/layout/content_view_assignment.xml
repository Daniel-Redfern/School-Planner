<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewAssignment"
    tools:showIn="@layout/activity_view_assignment"
    android:background="#604020">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/rectangle_with_rounded_corners_cream_color"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/view_assignment_Assignment_Name_Goes_Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:fontFamily="@font/fancyfont"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/view_assignment_Date_Due_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Due"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/fancyfont"
            android:layout_below="@id/view_assignment_Assignment_Name_Goes_Here"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/view_assignment_Date_Due_Goes_Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_margin="10dp"
            android:fontFamily="@font/fancyfont"
            android:textSize="20dp"
            android:layout_below="@id/view_assignment_Date_Due_Text"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/view_assignment_Description_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_margin="10dp"
            android:fontFamily="@font/fancyfont"
            android:textSize="20dp"
            android:layout_below="@id/view_assignment_Date_Due_Goes_Here"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/view_assignment_Description_Goes_Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_margin="10dp"
            android:fontFamily="@font/fancyfont"
            android:textSize="20dp"
            android:layout_below="@id/view_assignment_Description_Text"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:id="@+id/put_Photo_Stuff_Here"
            android:layout_below="@id/view_assignment_Description_Goes_Here">

        </RelativeLayout>

        <Button
            android:layout_marginBottom="15dp"
            android:textColor="#FFFDC7"
            android:background="@drawable/custom_button_background"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Assignment"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view_assignment_remove_button"
            android:layout_below="@id/put_Photo_Stuff_Here"
            />

        <Button
            android:background="@drawable/custom_button_background"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFDC7"
            android:text="Back To Main Page"
            android:textSize="20dp"
            android:id="@+id/view_assignment_back_button"
            android:layout_below="@id/view_assignment_remove_button"
            />



    </RelativeLayout>
</RelativeLayout>